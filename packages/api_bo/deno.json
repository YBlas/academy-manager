{
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/types.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "no-explicit-any",
        "no-implicit-any",
        "explicit-function-return-type"
      ],
      "exclude": ["no-debugger", "no-console"]
    }
  },
  "tasks": {
    "start": "deno run -A --watch src/app.ts",
    "inspect": "deno run -A --inspect=0.0.0.0:9229 src/app.ts"
  },
  "importMap": "../../import_map.json"
}
